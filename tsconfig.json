{
  "compilerOptions": {
    "lib": [
      "ES6",
      "ESNext"
    ],
    "moduleResolution": "node",
    "module": "ES2015",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/tests"
  ]
}
